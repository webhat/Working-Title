user nginx nginx;
worker_processes 4;

error_log /var/log/nginx/error_log info;

events {
	worker_connections 1024;
	use epoll;
}

http {
	include /etc/nginx/mime.types;
	default_type application/octet-stream;

	log_format main
		'$remote_addr - $remote_user [$time_local] '
		'"$request" $status $bytes_sent '
		'"$http_referer" "$http_user_agent" '
		'"$gzip_ratio"';

	client_header_timeout 10m;
	client_body_timeout 10m;
	send_timeout 10m;

	connection_pool_size 256;
	client_header_buffer_size 1k;
	large_client_header_buffers 4 2k;
	request_pool_size 4k;

	gzip on;
	gzip_min_length 1100;
	gzip_buffers 4 8k;
	gzip_types text/plain;

	output_buffers 1 32k;
	postpone_output 1460;

	sendfile on;
	tcp_nopush on;
	tcp_nodelay on;

	keepalive_timeout 75 20;

	ignore_invalid_headers on;

	index index.html index.php;

	server {
		#listen 127.0.0.1;
		listen 80;
		server_name workingtitle365.com;
		server_name www.workingtitle365.com;
		server_name ec2-54-216-210-198.eu-west-1.compute.amazonaws.com;
		server_name ec2-54-216-150-114.eu-west-1.compute.amazonaws.com;

		access_log /var/log/nginx/wt365.access.log main;
		error_log /var/log/nginx/wt365.error.log info;

		root /usr/share/puppet/configuration/current/html;
		index index.html index.php;

		error_page    404 = /404.php;

		client_max_body_size 60M;

		location / {
			root /usr/share/puppet/configuration/current/html;
		}
		location /img {
			root /usr/share/puppet/configuration/current/;
		}

		location /css {
			root /usr/share/puppet/configuration/current/;
		}

		location /js {
			root /usr/share/puppet/configuration/current/;
		}

		location ~ \.php$ {
			try_files $uri =404;
			fastcgi_split_path_info ^(.+\.php)(/.+)$;
			root /usr/share/puppet/configuration/current/php;
			include /etc/nginx/fastcgi_params;
			fastcgi_pass  127.0.0.1:9000;
			#fastcgi_pass unix:/var/run/php5-fpm.sock;
			#fastcgi_pass unix:/var/run/php-fcgi.sock;
			fastcgi_index index.php;
		}

		location ~ /vimeo(.*) {
			rewrite ^(.*)$ // redirect;
		}

		location ~ ^/fb($|.*) {
			rewrite ^(.*)$ /?utm_source=facebook&utm_medium=post&utm_campaign=$1 redirect;
		}

		location ~ /li($|.*) {
			rewrite ^(.*)$ /?utm_source=linkedin&utm_medium=post&utm_campaign=$1 redirect;
		}

		location Entire {
			rewrite ^(.*)$ Directory redirect;
		}

		location /upload/ {
			root /var/data/ext;
		}

		# FIXME: nice hack
		rewrite  ^/$ /index.php  permanent;

		rewrite ^/profile.php$ /maker/$arg_id? permanent;
		rewrite  ^/maker/(.*)$  /profile.php?id=$1  last;

		rewrite  ^/upload/s_(.*)$  /resize_passthrough.php?id=$1&size=s  last;
		rewrite  ^/upload/m_(.*)$  /resize_passthrough.php?id=$1&size=m  last;
		rewrite  ^/upload/l_(.*)$  /resize_passthrough.php?id=$1&size=l  last;
		rewrite  ^/upload/o_(.*)$  /resize_passthrough.php?id=$1&size=o  last;


	autoindex off;
	}
}

